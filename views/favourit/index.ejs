<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Favourit Color</th>
                    <th class="text-center">Favourit Fruit</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < favouriteList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= favouriteList[count].firstName %></td>
                        <td class="text-center"><%= favouriteList[count].lastname %></td>
                        <td class="text-center"><%= favouriteList[count].favouritColor %></td>
                        <td class="text-center"><%= favouriteList[count].favouritFruit %></td>
                    </tr>
                <% } %>
            </table>

        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>